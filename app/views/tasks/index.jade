extends ../shared/template
block content

  h2 List of Tasks

  table
    thead
      th Name
      th Due
      th Photo
      th Complete
      th Tags
      th Priority
    tbody
      each task in tasks
        tr(style='background-color:#{task.priority.color}')
          td= task.name
          td= moment(task.due).format('ll')
          td= task.photo
          td
            form(method='post', action='/tasks')
            input(type="checkbox", name="task.complete")
            button Update
          td= task.tags
          td= task.priority.name

